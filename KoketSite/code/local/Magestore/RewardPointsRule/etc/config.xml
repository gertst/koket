<config>
    <modules>
        <Magestore_RewardPointsRule>
            <version>0.2.0</version>
        </Magestore_RewardPointsRule>
    </modules>
    <frontend>
        <routers>
            <rewardpointsrule>
                <use>standard</use>
                <args>
                    <module>Magestore_RewardPointsRule</module>
                    <frontName>rewardpointsrule</frontName>
                </args>
            </rewardpointsrule>
        </routers>
        <layout>
            <updates>
                <rewardpointsrule>
                    <file>rewardpointsrule.xml</file>
                </rewardpointsrule>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_RewardPointsRule>
                    <files>
                        <default>Magestore_RewardPointsRule.csv</default>
                    </files>
                </Magestore_RewardPointsRule>
            </modules>
        </translate>
        <events>
            <rewardpoints_block_dashboard_earn_can_show>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/frontend_observer</class>
                        <method>dashboardCanShowEarning</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_block_dashboard_earn_can_show>
            <rewardpoints_block_dashboard_spend_can_show>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/frontend_observer</class>
                        <method>dashboardCanShowSpending</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_block_dashboard_spend_can_show>
            <rewardpoints_block_show_earning_on_product>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/frontend_observer</class>
                        <method>showEarningOnProduct</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_block_show_earning_on_product>
        </events>
    </frontend>
    <admin>
        <routers>
            <rewardpointsruleadmin>
                <use>admin</use>
                <args>
                    <module>Magestore_RewardPointsRule</module>
                    <frontName>rewardpointsruleadmin</frontName>
                </args>
            </rewardpointsruleadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <rewardpointsrule>
                    <file>rewardpointsrule.xml</file>
                </rewardpointsrule>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_RewardPointsRule>
                    <files>
                        <default>Magestore_RewardPointsRule.csv</default>
                    </files>
                </Magestore_RewardPointsRule>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <rewardpointsrule>
                <class>Magestore_RewardPointsRule_Model</class>
                <resourceModel>rewardpointsrule_mysql4</resourceModel>
            </rewardpointsrule>
            <rewardpointsrule_mysql4>
                <class>Magestore_RewardPointsRule_Model_Mysql4</class>
                <entities>
                    <earning_catalog>
                        <table>rewardpoints_earning_catalog</table>
                    </earning_catalog>
                    <earning_sales>
                        <table>rewardpoints_earning_sales</table>
                    </earning_sales>
                    <earning_product>
                        <table>rewardpoints_earning_product</table>
                    </earning_product>
                    <spending_catalog>
                        <table>rewardpoints_spending_catalog</table>
                    </spending_catalog>
                    <spending_sales>
                        <table>rewardpoints_spending_sales</table>
                    </spending_sales>
                </entities>
            </rewardpointsrule_mysql4>
        </models>
        <resources>
            <rewardpointsrule_setup>
                <setup>
                    <module>Magestore_RewardPointsRule</module>
                    <class>Magestore_RewardPointsRule_Model_Mysql4_Setup</class>
                </setup>
            </rewardpointsrule_setup>
        </resources>
        <blocks>
            <rewardpointsrule>
                <class>Magestore_RewardPointsRule_Block</class>
            </rewardpointsrule>
        </blocks>
        <helpers>
            <rewardpointsrule>
                <class>Magestore_RewardPointsRule_Helper</class>
            </rewardpointsrule>
        </helpers>
        <index>
            <indexer>
                <rewardpoints_earning_product>
                    <model>rewardpointsrule/indexer_product</model>
                    <!--depends>
                        <catalog_url />
                    </depends-->
                </rewardpoints_earning_product>
            </indexer>
        </index>
        <events>
            <!-- Earning Calculation Events -->
            <rewardpoints_collect_earning_total_points_after>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>collectCatalogEarning</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_collect_earning_total_points_after>
            <rewardpoints_collect_earning_total_points_before>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>collectShoppingCartEarning</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_collect_earning_total_points_before>
            <rewardpoints_calculation_earning_total_points>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>calculationEarningTotalPointsBlock</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_calculation_earning_total_points>
            
            <!-- Spending Calculation Events -->
            <checkout_cart_product_add_after>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>checkoutCartAddProduct</method>
                    </rewardpointsrule_observers>
                </observers>
            </checkout_cart_product_add_after>
            <checkout_cart_product_update_after>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>checkoutCartAddProduct</method>
                    </rewardpointsrule_observers>
                </observers>
            </checkout_cart_product_update_after>
            <sales_quote_product_add_after>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>salesQuoteAddProduct</method>
                    </rewardpointsrule_observers>
                </observers>
            </sales_quote_product_add_after>
            <rewardpoints_calculation_spending_point_item_spent>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>calculateSpendingPointItem</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_calculation_spending_point_item_spent>
            <rewardpoints_calculation_spending_point_item_discount>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>calculateSpendingPointDiscount</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_calculation_spending_point_item_discount>
            <!-- Spending Shopping Cart Events -->
            <rewardpoints_block_spend_get_rules>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>addBlockSpendingRules</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_block_spend_get_rules>
            <rewardpoints_calculation_spending_quote_rule_model>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>getSpendingQuoteRuleModel</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_calculation_spending_quote_rule_model>
            <rewardpoints_calculation_spending_rule_max_points>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>calculateSpendingRuleMaxPoints</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_calculation_spending_rule_max_points>
            <rewardpoints_calculation_spending_quote_rule_discount>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>calculateSpendingRuleDiscount</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_calculation_spending_quote_rule_discount>
            <!-- Checked Rules Spending -->
            <rewardpoints_calculation_spending_checked_rule_discount>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>calculateCheckedRuleDiscount</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_calculation_spending_checked_rule_discount>
            <rewardpoints_calculation_spending_checked_rule_point>
                <observers>
                    <rewardpointsrule_observers>
                        <type>singleton</type>
                        <class>rewardpointsrule/observer</class>
                        <method>calculateCheckedRulePoint</method>
                    </rewardpointsrule_observers>
                </observers>
            </rewardpoints_calculation_spending_checked_rule_point>
        </events>
        <sales>
            <quote>
                <totals>
                    <rewardpoints_catalog>
                        <class>rewardpointsrule/total_quote_catalog</class>
                        <after>subtotal</after>
                        <before>rewardpoints</before>
                    </rewardpoints_catalog>
                </totals>
            </quote>
        </sales>
    </global>
    <default>
        <rewardpoints>
            <rewardpointsrule>
                <enable>1</enable>
            </rewardpointsrule>
        </rewardpoints>
    </default>
</config>
